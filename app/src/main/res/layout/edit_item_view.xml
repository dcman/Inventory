<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1">

    <ImageView
        android:id="@+id/product_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        app:srcCompat="@android:drawable/ic_delete" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="0.5"
        android:orientation="vertical"
        android:layout_height="0dp">

        <EditText
            android:id="@+id/edit_item_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Product Name" />


        <EditText
            android:id="@+id/edit_item_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="100"
            android:inputType="number" />

        <EditText
            android:id="@+id/edit_item_quantity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="100"
            android:inputType="number" />

        <EditText
            android:id="@+id/edit_item_supplier"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ACME" />

        <EditText
            android:id="@+id/edit_item_supplier_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="sells@acme.com"
            android:inputType="textEmailAddress" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/edit_item_sell"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sell"
            android:layout_alignParentStart="true"/>

        <Button
            android:id="@+id/edit_item_buy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Buy more"
            android:layout_toRightOf="@id/edit_item_sell"/>
        <Button
            android:id="@+id/edit_item_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Save"
            android:layout_toLeftOf="@id/edit_item_delete"/>
        <Button
            android:id="@+id/edit_item_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Delete"
            android:layout_alignParentEnd="true"/>
    </RelativeLayout>
</LinearLayout>